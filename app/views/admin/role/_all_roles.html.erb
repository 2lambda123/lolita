<% if user  %>
  <div class="admin-list">
    <table>
      <% for role in Admin::Role.find(:all) %>
        <div class="admin-list-row">
          <tr><td style="width:100px;">
              <%= list_link :title=>role.name,:controller=>"/admin/role",:id=>role.id,:paging=>false,:html=>{:class=>"admin-record"} %>
            </td><td>
              <input class="admin-new-button" type="checkbox" <%= check_role user,role.name %>
                     onchange="simple_yui_request(this,{before:'config.url=object.checked ? \'/admin/user/add_role\' : \'/admin/user/remove_role\'',url:'',params:{role:'<%=role.name%>',user:<%=user.id%>,authenticity_token:'<%=form_authenticity_token%>'}})"/>
            </td>
          </tr>
        </div>
      <% end %>
    </table>
  </div>
<% end %>

