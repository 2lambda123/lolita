<% if role  %>
  <% users= Admin::SystemUser.find(:all)%>
  <div class="admin-list">
    <table>
      <% for user in users %>
        <div class="admin-list-row">
          <tr><td style="width:100px;">
              <%= list_link :title=>user.login,:controller=>"/admin/user",:id=>user.id,:paging=>false, :html=>{:class=>"admin-record"} %>
