<div id="pic_title_dialog" class="hidden_dialog"><!--[if !IE]>bilžu dialogs<![endif]-->
  <div class="hd">Lūdzu, ievadiet aprakstu</div>
  <div class="bd">
    <form method="POST" action="" id="pic_title_dialog_form">
      <label for="title">Apraksts: </label><input size="33" type="text" name="title" />
      <label for="language">Valoda: </label><select style="width:240px;" name="language" ></select><br/>
      <input type="submit" class="btn dialog-button"  style="margin-left:110px" value="Saglabāt" />
      <input type="button"  onclick="YAHOO.cms.pic_title_dialog.hide()" class="btn dialog-button" value="Atcelt" />
    </form>
  </div>
</div>
<div id="advanced_filter_dialog" class="hidden_dialog"><!--[if !IE]>bilžu dialogs<![endif]-->
  <div class="hd">Filtra nosaukums</div>
  <div class="bd">
    <label for="title">Nosaukums: </label><input id="advanced_filter_dialog_name" size="33" type="text" name="title" />
    <input type="button" id="advanced_filter_dialog_ok" class="btn dialog-button"  style="margin-left:110px" value="Saglabāt" />
    <input type="button"  onclick="YAHOO.cms.advanced_filter_dialog.hide()" class="btn dialog-button" value="Atcelt" />
  </div>
</div>
<div id="wait" style="display:none;">
  <div id="wait_dialog" class="containerPlus"
       width="265"
       buttons=""
       style="top:35%;left:35%;position:fixed"
       skin="white">
    <div class="no">
      <div class="ne">
        <div class="n"><%=t(:"dialogs.wait.title")%></div>
      </div>
      <div class="o">
        <div class="e">
          <div class="c">
            <div class="content"><img src="/lolita/images/icons/ajax-loader.gif" alt="........." /></div>
          </div>
        </div>
      </div>
      <div>
        <div class="so">
          <div class="se">
            <div class="s"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="warning" style="display:none;position:fixed;
     top:0;
     left:0px;
     width:100%;
     height:100%;
     display:none;
     background:url(/lolita/images/jquery/elements/screenBgnd.gif)">
  <div id="warning_dialog" class="containerPlus"
       width="265"
       buttons=""
       icon="alert.png"
       style="top:35%;left:35%;position:fixed"
       skin="black">
    <div class="no">
      <div class="ne">
        <div class="n"><%=t(:"dialogs.warning.title")%></div>
      </div>
      <div class="o">
        <div class="e">
          <div class="c">
            <div class="content">
              <%= t(:"dialogs.warning.content text") %>
            </div>
          </div>
        </div>
      </div>
      <div>
        <div class="so">
          <div class="se">
            <div class="s"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="picture_versions" style="display:none;position:fixed;
     top:0;
     left:00px;
     width:100%;
     height:100%;
     display:none;
     background:url(/lolita/images/jquery/elements/screenBgnd.gif)">
  <div id="picture_versions_dialog" class="containerPlus"
       buttons=""
       icon="folder_images.png"
       style="margin-left:80px;top:20px;position:fixed"
       skin="black">
    <div class="no">
      <div class="ne">
        <div class="n"><%=t(:"picture.versions")%></div>
      </div>
      <div class="o">
        <div class="e">
          <div class="c">
            <div id="picture_version_loading" style="display:none">
              <%= image_tag "/lolita/images/cms/image-crop-loader.gif", :alt=>"#{t(:"javascript.wait dialog header")}..." %>
            </div>
            <div id="picture_version_dialog_content" class="content">
              <div class="picture-versions-menu">
                <div class="title"><%=t(:"picture.all sizes")%></div>
                <ul id="picture_versions_menu">

                </ul>
              </div>
              <div class="version-container" id="current_version_image">
                <div class="title"><%=t(:"picture.original image")%></div>
                <div class="workarea">
                  <img src="" alt="" id="current_version_crop_area"/>
                </div>
              </div>
              <div class="version-container">
                <div class="title"><%=t(:"picture.cropped image")%></div>
                <div class="workarea preview">
                  <img src="" alt="" id="current_version_preview"/>
                </div>
              </div>
              <div class="version-container" >
                <div class="title"><%=t(:"picture.real look")%></div>
                <div>
                  <img src="" alt="" id="current_version_original"/>
                </div>
              </div>
              <div class="footer">
                <input type="button" class="btn" value="<%=t(:"actions.back").chars.capitalize%>" onclick="ITH.ImageFileVersions.hide()"/>
                <input type="button" class="btn" value="<%=t(:"actions.save").chars.capitalize%>" onclick="ITH.ImageFileVersions.save()"/>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div>
        <div class="so">
          <div class="se">
            <div class="s"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>