<% content_for :content_class do "with-secondary" end %>

<% content_for :script do %>
  <%= javascript_include_tag "tinymce/jquery.tinymce" %>
  <script>
    $(function(){
      $("textarea").tinymce({
        script_url: "/javascripts/tinymce/tiny_mce.js",
        theme: "advanced",
        skin: "cirkuit",
        theme_advanced_buttons1 : "bold,italic,underline,|,justifyleft,justifycenter,justifyright,|,formatselect",
        theme_advanced_buttons2 : "",
        theme_advanced_buttons3 : "",
        theme_advanced_toolbar_location: "top",
        theme_advanced_toolbar_align: "left",        
        // theme_advanced_statusbar_location : "bottom",
        theme_advanced_resizing: true
      });
    })
  </script>
<% end %>

<div class="secondary">
  <div class="box">
    <div class="boxtitle black">
      <h1><%= t "save" %></h1>
      <div class="arrow"></div>
    </div>
    <button class="save-all"><%=I18n.t("lolita.tabs.save_all")%></button>
  </div>
</div>

<% #mode container div with all data-* method to helper and change to block method %>
<div id="tabs-<%= resource_name %>" class="tabs" data-method="<%=resource.new_record? ? "POST" : "PUT" %>" data-tabs-url="<%=resource.new_record? ? lolita_resources_path : lolita_resource_path(:id=>resource.id)%>">
  <% tabs.each do |tab| %>
    <%= render_component :"lolita/tab", :display, :tab=>tab  %>
  <% end %>
</div>

