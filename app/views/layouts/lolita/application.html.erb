<html class="no-js" lang="en" style="height:100%">
  <!--<![endif]-->
  <head>
    <meta charset="utf-8"><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>Lolita</title><meta name="description" content=""><meta name="author" content="">
    <link rel="shortcut icon" href="/favicon.ico">

    <%= stylesheet_link_tag "lolita/application.css" %>
    <%= yield :style %>
    <%= javascript_include_tag "lolita/application.js" %>
    <%= yield :script %>
    <%= include_application_assets %>
    <%= raw csrf_meta_tag %>
  </head>
  <body>
    <%= render_component :"lolita/shared", :flash%>
    <div id="container">
      <%= render_component :"lolita/shared", :header %>
      <div id="main" role="main">
        <%= render_component :"lolita/navigation",:display,:tree=>Lolita::Navigation::Tree[:"left_side_navigation"] %>
        <div id="content" class="<%= content_classes %>">
          <%= yield %>
        </div>
      </div>
      <div class="push"></div>
    </div>
    <footer> 
      <div id="powered"><%= ::I18n.t("lolita.shared.powered", :year => Date.today.year)%></div>
    </footer>
  </body>
</html>