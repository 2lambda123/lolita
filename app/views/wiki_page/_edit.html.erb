<h1 class="page-title"><%= @page.name %></h1>
<% form_for :wiki_page, @page, :url=>{:action=>:save, :id=>@page.name} do |f|%>
  <%= f.text_area :content,
    :cols=>80,
    :rows=>(@page.content.blank? ? 20 : [[20, @page.content.length / 60].max, 60].min) %>
  <br />
  <%= submit_tag "Saglabāt"%> vai <%= link_to "Atgriesties", {:action=>:open, :id=>@page.name} %>
<% end %>

