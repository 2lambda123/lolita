<% if @fields && !@fields.empty? %>
  <div style="text-align:center;color:#F48843"><%= flash[:notice] %></div>
  <% remote_form_for :object,{:complete=>"$('#table_#{params[:table_id]}_fields').html(request)",:url=>{:action=>'save'}} do |f| %>
    <table style="margin-left:15px;width:95%">
      <tr>
        <%= small_list_header_cell :width=>300, :title=>"Nosaukums"  %>
        <%= small_list_header_cell :width=>300, :title=>"Pārdēvētais nosaukums"  %>
      </tr>
      <% for field in @fields %>
        <tr>
          <td><%= field.name %></td>
          <td><%= text_field_tag "object[#{field.id}]",field.human_name,:class=>'txt',:style=>"width:270px;" %></td>
        </tr>
      <% end %>
    </table>
    <br />
    <input type="hidden" value="<%=params[:table_id]%>" name="table_id"/>
    <input type="submit" class="btn" value="<%="Saglabāt" %>" />
    <br/>
  <% end%>
<%else%>
  <%= t(:"admin_table.table_not_found") %>
<% end %>