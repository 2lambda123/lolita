      <h2><%= t(:"start_page.col2_subtitle") %></h2>
    </div>
    <% form_tag "/reklama/", :class => "content", :id => "business_form", :method => "get" do -%>
      <div class="box-t"><div class="b"><div class="l"><div class="r"><div class="tl"><div class="tr"><div class="bl"><div class="br">
      <div class="min-height-box">&#160;</div>
      <div class="inner">
        <table id="filter">
          <tr>
            <th><%= label :business, :age, t(:"business.age")+":" %></th>
            <td style="text-align:right">
              <img src="/images/ajax-loader.gif" alt="" style="display:none" id="ajax-loader" />
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <div id="slider-range"></div>
              <div id="ages">
                <div id="age_from"></div><%= hidden_field :business, :birth_date_from %>
                <div id="age_to"></div><%= hidden_field :business, :birth_date_to %>
              </div>
            </td>
          </tr>
          <tr>
            <th><%= label :business, :sex, t(:"profile.step1.sex")+":" %></th>
            <td>
              <%= check_box_tag("business[sex][]", 2, true, {:id => "business_sex_2", :class => "chbox"}) %>
              <%= label_tag 'business_sex_2', t(:"profile.step1.woman"), :class => :radio %>
              <%= check_box_tag("business[sex][]", 1, true, {:id => "business_sex_1", :class => "chbox"}) %>
              <%= label_tag 'business_sex_1', t(:"profile.step1.man"), :class => :radio %>
            </td>
          </tr>
          <tr>
            <th><%= label :business, :area, t(:"profile.step2.area")+":" %></th>
            <td>
              <%= select :business, :area, [[(t :"business.whole_country"),""]] + Cms::Area.find(:all).collect{|a| [a.name,a.id]}, {} , {
                :onchange => ""
              } %>
            </td>
          </tr>
          <tr>
            <th><%= label :business, :interests, t(:"profile.step2.interests")+":" %></th>
            <td>
              <%= t(:"simple_words.all") %>
              <%= link_to_function t(:"business.show_interests"), "$('#interests').toggle('slow');" %>
            </td>
          </tr>
        </table>
        <div id="interests" style="display:none">
            <% i = 0 %>
            <% Cms::Interest.find(:all,:order => "name ASC").each do |item| -%>
              <div class="interest" <%= (i % 2 == 0)? ' style="clear:left;"' : '' %>>
                <%= check_box_tag("business[interests][]", item.id, nil, {:id => "business_interests_#{item.id}", :class => "chbox"}) %>
                <%= label_tag("business_interests_#{item.id}",item.name, :class => "chbox") %>
              </div>
              <% i += 1 %>
            <% end %>
            <br class="clear" />
        </div>
        <p id="user_count_box">
          <span><%= t(:"start_page.get_users") %></span> <span id="user_count"><%= @form_user_count %></span> <span><%= t(:"start_page.smsbuzz_users") %></span>
        </p>
      </div>
      <br class="clear"/>
      </div><br class="clear"/></div></div></div></div></div></div></div>
  <button type="submit" id="filter-btn" class="big-btn"><span><%= t(:"start_page.filter_btn") %></span></button>
      <br class="clear"/>
      <%= hidden_field :business, :from_start_page, :value => 1 %>
    <% end -%>
