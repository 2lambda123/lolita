<% content_for :stylesheet do -%>
    <%= stylesheet_link_tag "public/start_page2" %>
    <%= stylesheet_link_tag "/javascripts/jquery/themes/smoothness/jquery-ui-1.7.1.custom.css" %>
<% end -%>
<% content_for :javascript do -%>
  <%= javascript_include_tag "jquery/ui/ui.core.js" %>
  <%= javascript_include_tag "jquery/ui/ui.slider.js" %>
  <script type="text/javascript">
  $(function() {
      $("#slider-range").slider({
          range: true,
          min: 0,
          max: 100,
          values: [16, 55],
          slide: function(event, ui) {
            $('#age_from').html(ui.values[0] + " <%= t(:"business.years") %>");
            $('#age_to').html(ui.values[1] + " <%= t(:"business.years") %>");
            if($('.ui-slider-handle')[1].style.left.substr(0,2) - $('.ui-slider-handle')[0].style.left.substr(0,2) > 15){
              $('#age_from').css({left: $('.ui-slider-handle')[0].style.left});
            }
            if($('.ui-slider-handle')[1].style.left.substr(0,2) - $('.ui-slider-handle')[0].style.left.substr(0,2) > 17){
              $('#age_to').css({left: $('.ui-slider-handle')[1].style.left});
            }
            $('#business_birth_date_from').val(ui.values[0]);
            $('#business_birth_date_to').val(ui.values[1]);
          },
          change: function(){
            filter_users();
          }
      });
      $('#age_from').html($("#slider-range").slider("values", 0) + " <%= t(:"business.years") %>");
      $('#age_to').html($("#slider-range").slider("values", 1) + " <%= t(:"business.years") %>");
      $('#age_from').css({left: $('.ui-slider-handle')[0].style.left});
      $('#age_to').css({left: $('.ui-slider-handle')[1].style.left});
      $('#business_birth_date_from').val($("#slider-range").slider("values", 0));
      $('#business_birth_date_to').val($("#slider-range").slider("values", 1));

      assign_business_events();
      var ideas = Array(<%= @sms_ideas.collect{|i| "'#{i.msg.gsub("'",'"')}'" }.join(",") %>);
      var current = 0;
      window.setInterval(function(){
        i = (current <= ideas.length)? current + 1 : 0
        $('#sms-content').html(ideas[i]);
        current = i
      },5000);
  });

  function assign_business_events(){
    $("input[type=checkbox]").click(filter_users);
    $('select').change(filter_users);
  }

  function toggle_inputs(toggle){
    $("input[type=checkbox]").each(function(){
      this.disabled = (toggle)? true : false;
    });
    $("select").each(function(){
      this.disabled = (toggle)? true : false;
    });
    $("#slider-range").slider((toggle)? "disable" : "enable");
    $('#ajax-loader').toggle();
  }

  function filter_users(){
    
    var data = $('#business_form').serialize();
    toggle_inputs(true);
    $.post('/cms/rebate/filter_users/', data,
      function(data,textStatus){
        if(textStatus == 'success'){
          var rs = data.split("|");
          if(rs[0] >= 0){
            $('#user_count').html(rs[0]);
          }
          toggle_inputs(false);
        }else{
          alert('<%= t(:"business.ajax_error") %>');
        }
      });
    return true;
  }
  </script>
<% end -%>
