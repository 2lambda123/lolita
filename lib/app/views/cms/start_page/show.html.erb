        <%= link_to t(:"start_page.learn_more"), howto_advertise_url, :class => "more" %>
      </div>
    </div>
</div>
<div class="clear"> </div>

<% if @news.size>0 && @twitter_updates.size>0 && @advertiser_speaks.size>0 %>
  <div id="news-box" class="bottom-info-box">
    <h2><%= t(:"start_page.news") %></h2>
    <% @news.each do |n| %>
        <div class="news-item">
          <div class="date"><%= n.created_at.strftime("%d. ") + t(("months." + n.created_at.strftime("%B").downcase).to_sym).capitalize %></div>
          <h3><%= n.name %></h3>
          <%= n.body %>
        </div>
    <% end %>
    <br class="clear" />
  </div>
