    <h2><%= t(:"start_page.twitter") %></h2>
    <% @twitter_updates.each do |u| %>
      <div class="twitter-item">
        <div class="date">
          <%= twitter_time(u[:time]) %>
        </div>
         <p><%= u[:description] %>
      </div>
    <% end %>
    <div id="follow-twitter"><%=  t(:"start_page.follow_us_on_twitter") %><%= link_to(image_tag("twitter-logo.png"), "http://twitter.com/smsbuzzlv") %></div>
  </div>
  <div id="advertiser-box" class="bottom-info-box">
    <h2><%= t(:"start_page.advertiser_speaks") %></h2>
